<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_super_senha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gmarcon.supersenha.SuperSenhaActivity">

    <LinearLayout android:id="@+id/secreto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
        <ImageView android:id="@+id/imgCor1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <ImageView android:id="@+id/imgCor2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <ImageView android:id="@+id/imgCor3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        
    </LinearLayout>

    <GridLayout android:id="@+id/jogada"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:columnCount="6"
        android:layout_below="@id/secreto"
        android:background="#FF0000"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">


        <ImageView android:id="@+id/userChoice00"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="selecionarCor"/>

        <ImageView android:id="@+id/userChoice01"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/userChoice02"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/result00"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


        <ImageView android:id="@+id/result01"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/result02"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/userChoice10"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/userChoice11"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/userChoice12"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/result10"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


        <ImageView android:id="@+id/result11"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView android:id="@+id/result12"
            android:layout_column="5"
            android:layout_row="1"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


    </GridLayout>

    <Button android:id="@+id/btnJogar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jogada"
        android:layout_marginTop="10dp"
        android:onClick="jogar"
        android:text="@string/lblJogar"/>

</RelativeLayout>
